/**index.wxss**/
page{
  background-color: #82E0AA;
  opacity: 0.9;
}
.indexContainer{
  display: flex;
  flex-direction: column;
  align-items: center;  
}
.avatar{
  width: 250rpx;
  height: 250rpx;
  border-radius: 150rpx;
  margin: 200rpx 0 50rpx 0;
}
button{
  width: 240rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  border: 1px solid #fff;
  background: #ABEBC6;
  line-height: 80rpx;
  margin: -250rpx 0 0 0;
}

.userName{
  font-size: 32rpx;
  font-weight: bold;
  margin: 120rpx auto;
  color: #fff;
}
.goBlog{
  display: inline-block;
  width: 220rpx;
  height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  border: 1px solid #fff;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  background: #ABEBC6;
}
