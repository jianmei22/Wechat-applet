.tmpContainer{
	display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid rgb(196, 192, 192);
  margin: 10rpx;
}
.avatar_data{
  padding: 15rpx;
}
.avatar_data image{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 25rpx;
}
.avatar_data text{
  font-size: 32rpx;
}
.blogImg{
  width: 100%;
  height: 450rpx;
}
.blog{
  font-size: 32rpx;
  text-indent: 32rpx;
}
.collection image{
  float: right;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}
.collection text{
  float: right;
  font-size: 28rpx;
  margin: 0 20rpx 10rpx 20rpx;
}